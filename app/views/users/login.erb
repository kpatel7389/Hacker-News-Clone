<h1>Login</h1>

<ul>
  <% if @errors %>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>
</ul>

<form class="login" method="post" action="/login">
  <label>Email:</label>
  <input type="text" name="email">
  <br>
  <br>
  <label>Password:</label>
  <input type="password" name="password">
  <br>
  <br>
  <input type="submit" value="login">
</form>
